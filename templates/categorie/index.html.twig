{% extends 'dashboard-base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
 <div class="container-fluid pt-4 px-4">
                <div class="bg-secondary text-center rounded p-4">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <h6 class="mb-0">Categories</h6>
                        <a href="{{ path('app_categorie_new') }}">Create new</a>
                    </div>
                    <div class="table-responsive">
                        <table class="table text-start align-middle table-bordered table-hover mb-0">
                            <thead>
                                <tr class="text-white">
                                    <th scope="col">Categorie</th>
                                    <th scope="col">Actions</th>
                            
                            
                                </tr>
                            </thead>
                            <tbody>
                              {% for categorie in categories %}
                                <tr>
                                   
                                    <td>{{ categorie.nomcategorie }}</td>
                                
                                    <td><a class="btn btn-sm btn-primary" href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">Edit</a>
                                                                       {{ include('categorie/_delete_form.html.twig') }}</td>

                                </tr>
                                 {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
                           
                               
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


    
{% endblock %}
