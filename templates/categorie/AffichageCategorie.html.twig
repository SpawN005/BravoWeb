{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des catégories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for categorie in c %}
                <tr>
                    <td>{{ categorie.id }}</td>
                    <td>{{ categorie.nomcategorie }}</td>
                    <td>
                        <a href="{{ path('app_updateCategorie', {'id': categorie.id}) }}" class="btn btn-primary">Modifier</a>
                        <a href="{{ path('app_deleteCategorie', {'id': categorie.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?')">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_addCategorie') }}" class="btn btn-success">Ajouter une catégorie</a>
{% endblock %}
