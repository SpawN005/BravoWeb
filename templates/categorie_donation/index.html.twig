            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div><a href="{{ path('app_categorie_donation_new') }}"><button type="button" class="btn btn-warning">Create new</button></a></div>
{% endblock %}
