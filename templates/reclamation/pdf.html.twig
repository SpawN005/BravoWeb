
<h1 align ="center" style="color:blue;">Liste des reclamations Tun'Art</h1><hr>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h1 align="center" style="color:red;">Reclamation</h1>
                            {# <img src="{{ asset('uploads/'~ "tunart.png") }}" alt="" width="143" #}



                    </div>

<!DOCTYPE html>
<html>
<head>
   
    <style>
                            #reclamation {
                                font-family: Arial, Helvetica, sans-serif;
                                border-collapse: collapse;
                                width: 100%;
                            }
                            #reclamation td, #reclamation th {
                                border: 1px solid #ddd;
                                padding: 8px;
                            }
                            #reclamation tr:nth-child(even){background-color: #f2f2f2;}
                            #reclamation tr:hover {background-color: #ddd;}
                            #reclamation th {
                                padding-top: 12px;
                                padding-bottom: 12px;
                                text-align: left;
                                background-color: royalblue;
                                color: white;
                            }
                        </style>
</head>
<body>
    <table class="table table-striped table-bordered" id="reclamation" >
        <thead>
    <tr>
        <th class="wd-12p col-id">Id</th>
        <th class="wd-12p col-title">Title</th>
        <th class="wd-12p col-description">Description</th>
        <th class="wd-12p col-date">Date_Creation</th>
        <th class="wd-12p col-etat">Etat</th>
        <th class="wd-12p col-owner">OwnerID</th>
        <th class="wd-12p col-dateTraitement">date_Traitement</th>
        <th class="wd-12p col-note">note</th>
        <th class="wd-12p col-type">typereclamation</th>
    </tr>
</thead>
        <tbody>
            {% for reclamation in reclamations %}
            <tr>
                <td class="col-id">{{ reclamation.id }}</td>
        <td class="col-title">{{ reclamation.title }}</td>
        <td class="col-description">{{ reclamation.description }}</td>
        <td class="col-date">{{ reclamation.dateCreation|date('d/m/Y') }}</td>
        <td class="col-etat">{{ reclamation.etat }}</td>
        <td class="col-owner">{{ reclamation.ownerID.firstName }}</td>
        <td class="col-dateTraitement">{{ reclamation.dateTreatment|default('-')|date('d/m/Y') }}</td>
        <td class="col-note">{{ reclamation.note|default('-') }}</td>
        <td class="col-type">{{ reclamation.typereclamation }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</body>
</html>

