{% extends 'dashboard-base.html.twig' %}


{% block title %}Category index{% endblock %}
{% block nav %}
                <div class="navbar-nav w-100">
                    <a href="index.html" class="nav-item nav-link active"><i class="fa fa-tachometer-alt me-2"></i>Dashboard</a>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-laptop me-2"></i>Category Management</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a href="{{ path('app_new_categorie_blog')}}" class="dropdown-item">create type</a>
                            <a href="{{ path('app_categorie_blog')}}" class="dropdown-item">list type</a>
                        </div>
                    </div>
                    
                </div>
            </nav>
        </div>

        <!-- Sidebar End -->
{% endblock %}

{% block body %}
    <h1>Category index</h1>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
               
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.nomCategorie }}</td>
               
                <td>
                    <a href="{{ path('app_update_categorie', {'id': categorie.id}) }}">edit</a>
                    <a href="{{ path('app_delete_categorie', {'id': categorie.id}) }}">delete</a>
                 
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <a href="{{ path('app_new_categorie_blog') }}">Add new category</a>
{% endblock %}
