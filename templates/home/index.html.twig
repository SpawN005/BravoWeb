            Donations comul√©s
        </div>
        <div class="col-3">

            <div>
                <canvas id="myChart2" width="10000px" height="800px"></canvas>
            </div>

            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

            <script>
                const chartData = {};

                {% for k in donation %}
                if (!chartData["{{ k.title }}"]) {
                    chartData["{{ k.title }}"] = {{ k.amount }};
                } else {
                    chartData["{{ k.title }}"] += {{ k.amount }};
                }
                {% endfor %}

                const ctx = document.getElementById('myChart2');

                new Chart(ctx, {
                    type: 'pie',
                    data: {
                        labels: Object.keys(chartData),
                        datasets: [{
                            label: 'amount',
                            data: Object.values(chartData),
                            backgroundColor: [
                                '#FF6384',
                                '#36A2EB',
                                '#FFCE56',
                                '#8BC34A',
                                '#9C27B0',
                                '#FF9800',
                                '#607D8B',
                                '#795548',
                                '#E91E63',
                                '#00BCD4',
                            ]
                        }]
