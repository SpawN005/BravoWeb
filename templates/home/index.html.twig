{% extends 'back.html.twig' %}

{% block title %}My Chart Example {% endblock %}


{% block body %}
<div class="container" >
    <div class="row">
        <h1>my charts</h1>
    </div>

    <div class="row">
        <div class="col-1" style="writing-mode: vertical-lr;
			text-orientation: mixed;
