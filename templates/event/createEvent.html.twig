{% block body %}
<h1>New Event </h1>

 

                      {{form_start(form,{'attr': {'novalidate': 'novalidate'}} )}}
                     
                  
                     
                        <div class="container-fluid pt-4 px-4">
                          <div class="bg-secondary rounded h-100 p-4"> 
                            <div class="row">
                                <div class="form-floating mb-3">
                                {{ form_widget(form.title,{'attr': {'class': 'form-control' , 'id':'floatingTitle'}, 'label':null}) }} 
                                   <label for="floatingTitle">Title</label>
                                  <p>  {{ form_errors (form.title) }}  </p>   
                                </div>
                                <div class="form-floating mb-3">
                                  
                                {{ form_widget(form.description,{'attr': {'class': 'form-control', 'id':'floatingDescription'}, 'label':null}) }} 
                                  <label for="floatingDescription">Description</label>
                                  <p> {{ form_errors (form.description) }}  </p>  
                               
                                    <div class="form-floating mb-3">
                             
                                {{ form_widget(form.nb_placeMax,{'attr': {'class': 'form-control', 'min': '1','id':'floatingnb_placeMax'},'label':null}) }} 
                                 <label for="floatingnb_placeMax">Nb place Max</label>
                                 <p>  {{ form_errors (form.nb_placeMax) }}  </p>  
                                 </div>
                             <div class="form-floating mb-3">
                               
                                    {{ form_widget(form.date_beg,{'attr': {'class': 'form-control', 'id':'floatingdate_beg'},'label':null}) }} 
                                     <label for="floatingdate_beg">Date Debut</label>
                                 <p>    {{ form_errors (form.date_beg ) }} </p>  
                                </div>
                                <div class="form-floating mb-3">
                           
                                {{ form_widget(form.date_end,{'attr': {'class': 'form-control', 'id':'floatingEnd_date'},'label':null}) }}
                                    <label for="floatingEnd_date">    End date </label>
                               <p>    {{ form_errors (form.date_end) }}  </p>  
                                </div>

                                                               <div class="form-floating mb-3">

                             
                                {{ form_widget(form.image,{'attr': {'class': 'form-control', 'id':'floatingImage'},'label':null}) }}
                                  <label for="floatingImage">    Image </label> 
                                <p>    {{ form_errors (form.image) }} </p>  
                                 </div>
                                        <div class="form-floating ">
                                  
                                    {{ form_widget(form.categorie, {'attr': {'class': 'form-control', 'id':'floatingImage'},'label':null}) }} 
                                     <label for="floatingcategorie">    Categorie </label> 
                                   <p>     {{ form_errors(form.categorie) }} </p>  
                                </div>

                     
                                    <div class="col-lg-12 mt-3">
                                    <button class="btn btn-sm btn-primary" >{{ button_label|default('Create') }}</button>
                                </div><!-- /.col-lg-12 -->
                            <a href="{{ path('app_event') }}" class="btn btn-sm btn-primary">Retour</a>
                    {{form_end(form)}}
                               </div><!-- /.col-lg-8 -->
                   </div>
                        </div>
          
       

        
{% endblock %}