{% block body %}
 
<h1>Edit Event </h1>
                      {{form_start(form,{'attr': {'novalidate': 'novalidate'}} )}}
                            <div class="row">
                             <div class="col-lg-6">
                                {{ form_label (form.title, "Title") }}
                                {{ form_widget(form.title) }}
                                 {{ form_errors (form.title) }}
                                </div>
                                <div class="col-lg-12">
                                     {{ form_label (form.description, "Description") }}
                                {{ form_widget(form.description) }}
                                 {{ form_errors (form.description) }}
                                </div><!-- /.col-lg-12 -->
                                  
                                  <div class="col-lg-6">
                                {{ form_label (form.nb_placeMax, "Max number of places") }}
                                {{ form_widget(form.nb_placeMax) }}
                                 {{ form_errors (form.nb_placeMax) }}
                                 </div>
                                  <div class="col-lg-6">
                                {{ form_label (form.date_beg, "Start date") }}
                                {{ form_widget(form.date_beg) }}
                                 {{ form_errors (form.date_beg) }}
                                 </div>
                                  <div class="col-lg-6">
                                {{ form_label (form.date_end, "End date") }}
                                {{ form_widget(form.date_end) }}
                                 {{ form_errors (form.date_end) }}
                                 </div>
                                 <div class="col-lg-6">
                                {{ form_label (form.image, "Image") }}
                                {{ form_widget(form.image) }}
                                 {{ form_errors (form.image) }}
                                 </div>
                                   <div class="col-lg-6">
                                {{ form_label (form.categorie, "Categorie") }}
                                {{ form_widget(form.categorie) }}
                                 {{ form_errors (form.categorie) }}
                                 </div>
                                  </div><!-- /.col-lg-12 -->
                                    <div class="col-lg-12">
                                    <button class="thm-btn contact-one__btn" >{{ button_label|default('Edit') }}</button>
                                </div><!-- /.col-lg-12 -->
                            </div><!-- /.row -->
                {{form_end(form)}}
                 
                    </div><!-- /.col-lg-8 -->
                   
                </div><!-- /.row --></div>
            </div><!-- /.container -->
        </div><!-- /.contact-one -->


{% endblock %}
