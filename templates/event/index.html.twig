{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
    <h1>Event index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Max number of places</th>
                <th>Start date</th>
                <th>End date</th>
                <th>Url</th>
                <th>Category</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.title }}</td>
                <td>{{ event.description }}</td>
                <td>{{ event.nb_placeMax  }}</td>
                <td>{{ event.date_beg  }}</td>
                <td>{{ event.date_end  }}</td>
                <td>{{ event.url }}</td>
                <td>{{ event.categorie.nomCategorie   }}</td>
                <td>
                    <a href="{{ path('app_readEvent', {'id': event.id}) }}">show</a>
                    <a href="{{ path('app_updateEvent', {'id': event.id}) }}">edit</a>
                    <a href="{{ path('app_deleteEvent', {'id': event.id}) }}">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_addEvent') }}">Create new</a>
{% endblock %}