{% extends 'base-back.html.twig' %}

{% block title %}Event index{% endblock %}
 {% block nav %}
                <div class="navbar-nav w-100">
                    <a href="{{ path('app_event')}}" class="nav-item nav-link active"><i class="fa fa-tachometer-alt me-2"></i>Dashboard</a>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-laptop me-2"></i>Gestion events</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a href="{{ path('app_addEvent')}}" class="dropdown-item">create event</a>
                            <a href="{{ path('app_addCategorie')}}" class="dropdown-item">create type</a>
                            <a href="{{ path('app_event_categorie')}}" class="dropdown-item">list type</a>
                        </div>
                    </div>
                    
                </div>
            </nav>
        </div>

        <!-- Sidebar End -->
{% endblock %}
{% block body %}
    <h1>Event index</h1>
    {{ form_start(form) }}
        {{ form_row(form.dateBeg) }}
        {{ form_row(form.dateEnd) }}
        {{ form_row(form.nbPlaceMax) }}
        {{ form_row(form.categorie, {'empty_data': null}) }}
        {{ form_row(form.Search) }}
    {{ form_end(form) }}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Max number of places</th>
                <th>Start date</th>
                <th>End date</th>
                <th>Image</th>
                <th>Category</th> 
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for e in ev %}
            {# {% if e.nbPlaceMax <= data.nbPlaceMax and e.dateBeg >= data.min and e.dateEnd <= data.max %} #}
                <tr>
                    <td>{{ e.id }}</td>
                    <td>{{ e.title }}</td>
                    <td>{{ e.description }}</td>
                    <td>{{ e.nbPlaceMax  }}</td>
                    <td>{{ e.dateBeg |date('Y-m-d') }}</td>
                    <td>{{ e.dateEnd |date('Y-m-d') }}</td>
                    <td>{{ e.image }}</td>
                    {% if e.categorie is not null %}
                        <td>{{ e.categorie.nom }}</td>
                    {% else %}
                        <td>No category</td>
                    {% endif %}
                    <td> 
                        {# <a href="{{ path('app_readEvent', {'id': e.id}) }}">show</a> #}
                        <a href="{{ path('app_updateEvent', {'id': e.id}) }}">edit</a>
                        <a href="{{ path('app_deleteEvent', {'id': e.id}) }}">delete</a>
                        <a href="{{ path('app_detailEvent', {'id': e.id}) }}">details</a>
                    </td>
                </tr>
            {# {% endif %} #}
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_addEvent') }}">Create new</a>

    <a href="{{ path('app_event_categorie') }}">Categories</a>
{% endblock %}
